{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "plugins": [
      { "name": "tslint-language-service"}
    ],
    "typeRoots": [
      "node_modules/@types",
      "@types",
      "./@types"
    ],
    "lib": ["es2017", "dom"]
  },
  "include": [
    "./src/**/*"
  ],
	"exclude": [
			"node_modules",
			"**/*.spec.ts"
	]
}
