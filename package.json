{
  "name": "FreeBoardGame.org",
  "version": "1.0.0",
  "description": "",
  "main": ".eslintrc.js",
  "scripts": {
    "dev": "run-s server:build dev:watch",
    "dev:watch": "webpack --watch --progress --config webpack.dev.js",
    "fix": "yarn run lint && yarn run tsfmt",
    "lint": "tslint --fix -c tslint.json 'src/**/*.ts*'",
    "prod": "run-s prod:build server",
    "prod:build": "yarn run server:build && webpack --progress --config webpack.prod.js",
    "precommit": "yarn run verify-lint && yarn run verify-tsfmt && yarn run server:build && yarn run test",
    "pre": "yarn run precommit",
    "server": "node server-build/server.js",
    "server:build": "webpack --progress --config webpack.server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --forceExit",
    "test:coveralls": "cat coverage/lcov.info | node node_modules/.bin/coveralls",
    "tsfmt": "tsfmt -r",
    "verify-tsfmt": "tsfmt --verify",
    "verify-lint": "tslint -c tslint.json 'src/**/*.ts*'"
  },
  "pre-commit": [
    "precommit"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:freeboardgame/FreeBoardGame.org.git"
  },
  "sideEffects": false,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/freeboardgame/FreeBoardGame.org/issues"
  },
  "homepage": "https://github.com/freeboardgame/FreeBoardGame.org",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^23.3.13",
    "@types/koa": "^2.0.48",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-static": "^4.0.0",
    "@types/prop-types": "^15.5.8",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/shortid": "0.0.29",
    "babel-loader": "^8.0.5",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^1.0.1",
    "concurrently": "^4.1.0",
    "coveralls": "^3.0.0",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "23",
    "koa-helmet": "^4.0.0",
    "nodemon": "^1.18.9",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.7.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.1",
    "ts-jest": "^23.10.5",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-language-service": "^0.9.9",
    "tslint-react": "^3.2.0",
    "typescript": "^3.3.1",
    "typescript-formatter": "^7.2.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@babel/core": "^7.3.3",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@material-ui/core": "3.3.0",
    "@material-ui/icons": "^3.0.2",
    "@types/enzyme": "^3.1.16",
    "@types/koa-router": "^7.0.39",
    "@types/mustache": "^0.8.32",
    "@types/serialize-javascript": "^1.5.0",
    "chess.js": "^0.10.2",
    "copy-to-clipboard": "^3.0.8",
    "copy-webpack-plugin": "^4.6.0",
    "flamecoals-boardgame.io": "^0.37.0",
    "html-webpack-harddisk-plugin": "^1.0.1",
    "koa": "^2.7.0",
    "koa-router": "^7.4.0",
    "koa-send": "^5.0.0",
    "koa-socket-2": "^1.0.17",
    "koa-static": "^5.0.0",
    "mustache": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.7.0",
    "react-async-bootstrapper": "^2.1.1",
    "react-async-component": "^2.0.0",
    "react-dom": "^16.7.0",
    "react-ga": "^2.5.7",
    "react-router-dom": "^4.2.2",
    "serialize-javascript": "^1.6.1",
    "shortid": "^2.2.14",
    "socket.io-client": "^2.2.0",
    "three": "^0.101.1",
    "webpack-shell-plugin-next": "^0.6.4",
    "workbox-sw": "^3.6.3",
    "workbox-webpack-plugin": "^3.6.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/server.tsx",
      "!src/server.tsx",
      "!src/app.tsx",
      "!**/*.d.ts",
      "!src/games/chess/chessjswrapper.ts"
    ],
    "testURL": "http://localhost",
    "setupFiles": [
      "./test/test-shim.js",
      "./test/test-setup.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/server-build/"
    ],
    "moduleNameMapper": {
      "\\.(css|jpg|png|svg|webp|mp3)$": "<rootDir>/test/empty-module.js"
    }
  }
}
